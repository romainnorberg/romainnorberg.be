{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <section class="hero is-warning is-large">
        <div class="hero-body">
            <div class="container">
                <div class="section-header has-text-centered">
                    <img class='logo' src='{{ asset('build/images/logo-romainnorberg.svg') }}'/>
                </div>
                <div class="section-body has-text-centered">
                    <h1 class="title">No full stack... <br>but problem solver developer</h1>
                    <p>
